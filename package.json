{
  "name": "bricol-suivi-chantier",
  "version": "1.0.0",
  "type": "module",
  "description": "Application PWA de suivi de chantier pour l'orphelinat Les Petits Anges de Dieu",
  "scripts": {
    "dev": "vite",
    "dev:server": "node server/index.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:server\"",
